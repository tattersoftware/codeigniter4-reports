{
	"name": "tatter/reports",
	"description": "Report management framework for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4",
		"reports",
		"reporting"
	],
	"homepage": "https://github.com/tattersoftware/codeigniter4-reports",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php" : ">=7.2",
		"tatter/handlers": "^2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.5",
		"fzaninotto/faker": "^1.9@dev",
		"codeigniter4/codeigniter4": "dev-develop",
		"phpstan/phpstan": "^1.2",
		"squizlabs/php_codesniffer": "^3.5",
		"codeigniter4/codeigniter4-standard": "^1.0"
	},
	"autoload": {
		"psr-4": {
			"Tatter\\Reports\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"analyze": "phpstan analyze",
		"style": "phpcs --standard=./vendor/codeigniter4/codeigniter4-standard/CodeIgniter4 src/ tests/",
		"test": "phpunit",
		"post-update-cmd": [
			"composer dump-autoload"
		]
	}
}
